<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <!-- 매퍼파일들을 관리해줄 xml파일 -->
<configuration>
<!-- 테이블 개수 만큼 생성 -->
   <typeAliases>
      <typeAlias type="com.mega.project.FacilityVO" alias="fVO"></typeAlias> <!-- FacilityVO -->
      <typeAlias type="com.mega.project.ProductVO" alias="productVO"></typeAlias> 
      <!-- 앞에 있는 경로가 기니까 alias로 짧게 호출할 수 있다. -->
      <!-- 내가 사용할 VO경로를 지정해준다. 입력값을 받아오는 처리 과정 -->
      <typeAlias type="com.mega.project.RuserVO" alias="ruserVO"></typeAlias>
   </typeAliases>
   <mappers>
      <mapper resource="mapper/facilityMapper.xml" /> <!-- sql문이 저장된 xml파일을 매퍼로 사용 -->
      <mapper resource="mapper/productMapper.xml" /> <!-- sql문이 저장된 xml파일을 매퍼로 사용 -->
      <mapper resource="mapper/ruserMapper.xml" />
   </mappers>
</configuration>